{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "lib",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true ,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "react-vite-library": [ "lib/index.ts" ]
    },
    "typeRoots": [
      "node_modules/@types",
      "lib/index.d.ts"
    ]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "build/**/*", "dist", "../it-simple-react-ui-demo/src/main.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
